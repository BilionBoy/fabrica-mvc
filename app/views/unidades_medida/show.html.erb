<div class="container">
  <%= render "shared/notice" %>
  <div class="card border-0 shadow shadow-sm">
    <div class="card-header border-0 d-flex justify-content-between">
      <span class="fs-4">Visualizar Unidade Medida</span>
    </div>
    <div class="card-body">
      <div id="<%= dom_id @unidade_medida %>">
          <p>
            <strong>Nome:</strong>
            <%= @unidade_medida.nome %>
          </p>
      </div>
    </div>
    <div class="card-footer border-0 d-flex justify-content-between">
      <div>
        <%= link_to edit_unidade_medida_path(@unidade_medida), class: "btn btn-primary" do %>
        <i class="bi bi-pencil-square"></i> Editar
        <% end %>
        <%= link_to "Voltar", unidades_medida_path, class: "btn btn-secondary" %>
      </div>
      <%= button_to "Deletar", @unidade_medida, method: :delete, class: "btn btn-outline-danger border-0" %>
    </div>
  </div>
</div>
