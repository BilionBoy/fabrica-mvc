<div class="container">
  <%= render "shared/notice" %>
  <div class="card border-0 shadow shadow-sm">
    <div class="card-header border-0 d-flex justify-content-between">
      <span class="fs-4">Visualizar Categoria Produto</span>
    </div>
    <div class="card-body">
      <div id="<%= dom_id @categoria_produto %>">
          <p>
            <strong>Empresa:</strong>
            <%= @categoria_produto.empresa %>
          </p>
          <p>
            <strong>Nome:</strong>
            <%= @categoria_produto.nome %>
          </p>
          <p>
            <strong>Descricao:</strong>
            <%= @categoria_produto.descricao %>
          </p>
          <p>
            <strong>Ativo:</strong>
            <%= @categoria_produto.ativo %>
          </p>
      </div>
    </div>
    <div class="card-footer border-0 d-flex justify-content-between">
      <div>
        <%= link_to edit_categoria_produto_path(@categoria_produto), class: "btn btn-primary" do %>
        <i class="bi bi-pencil-square"></i> Editar
        <% end %>
        <%= link_to "Voltar", categoria_produtos_path, class: "btn btn-secondary" %>
      </div>
      <%= button_to "Deletar", @categoria_produto, method: :delete, class: "btn btn-outline-danger border-0" %>
    </div>
  </div>
</div>
