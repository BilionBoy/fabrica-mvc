<div class="container">
  <%= render "shared/notice" %>
  <div class="card border-0 shadow shadow-sm">
    <div class="card-header border-0 d-flex justify-content-between">
      <span class="fs-4">Visualizar Filial</span>
    </div>
    <div class="card-body">
      <div id="<%= dom_id @filial %>">
          <p>
            <strong>Nome:</strong>
            <%= @filial.nome %>
          </p>
          <p>
            <strong>Descricao:</strong>
            <%= @filial.descricao %>
          </p>
          <p>
            <strong>Empresa:</strong>
            <%= @filial.empresa %>
          </p>
          <p>
            <strong>Municipio:</strong>
            <%= @filial.municipio %>
          </p>
      </div>
    </div>
    <div class="card-footer border-0 d-flex justify-content-between">
      <div>
        <%= link_to edit_filial_path(@filial), class: "btn btn-primary" do %>
        <i class="bi bi-pencil-square"></i> Editar
        <% end %>
        <%= link_to "Voltar", filiais_path, class: "btn btn-secondary" %>
      </div>
      <%= button_to "Deletar", @filial, method: :delete, class: "btn btn-outline-danger border-0" %>
    </div>
  </div>
</div>
