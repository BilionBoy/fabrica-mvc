<div class="container">
  <%= render "shared/notice" %>
  <div class="card border-0 shadow shadow-sm">
    <div class="card-header border-0 d-flex justify-content-between">
      <span class="fs-4">Visualizar Entrada Estoque</span>
    </div>
    <div class="card-body">
      <div id="<%= dom_id @entrada_estoque %>">
          <p>
            <strong>Empresa:</strong>
            <%= @entrada_estoque.empresa %>
          </p>
          <p>
            <strong>Produto:</strong>
            <%= @entrada_estoque.produto %>
          </p>
          <p>
            <strong>Quantidade:</strong>
            <%= @entrada_estoque.quantidade %>
          </p>
          <p>
            <strong>Preco Custo:</strong>
            <%= @entrada_estoque.preco_custo %>
          </p>
          <p>
            <strong>Data Entrada:</strong>
            <%= @entrada_estoque.data_entrada %>
          </p>
          <p>
            <strong>Observacao:</strong>
            <%= @entrada_estoque.observacao %>
          </p>
          <p>
            <strong>Created By:</strong>
            <%= @entrada_estoque.created_by %>
          </p>
      </div>
    </div>
    <div class="card-footer border-0 d-flex justify-content-between">
      <div>
        <%= link_to edit_entrada_estoque_path(@entrada_estoque), class: "btn btn-primary" do %>
        <i class="bi bi-pencil-square"></i> Editar
        <% end %>
        <%= link_to "Voltar", entradas_estoque_path, class: "btn btn-secondary" %>
      </div>
      <%= button_to "Deletar", @entrada_estoque, method: :delete, class: "btn btn-outline-danger border-0" %>
    </div>
  </div>
</div>
