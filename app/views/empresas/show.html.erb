<div class="container">
  <%= render "shared/notice" %>
  <div class="card border-0 shadow shadow-sm">
    <div class="card-header border-0 d-flex justify-content-between">
      <span class="fs-4">Visualizar Empresa</span>
    </div>
    <div class="card-body">
      <div id="<%= dom_id @empresa %>">
          <p>
            <strong>Nome Fantasia:</strong>
            <%= @empresa.nome_fantasia %>
          </p>
          <p>
            <strong>Razao Social:</strong>
            <%= @empresa.razao_social %>
          </p>
          <p>
            <strong>Cnpj:</strong>
            <%= @empresa.cnpj %>
          </p>
          <p>
            <strong>Email:</strong>
            <%= @empresa.email %>
          </p>
          <p>
            <strong>Telefone:</strong>
            <%= @empresa.telefone %>
          </p>
          <p>
            <strong>Endereco:</strong>
            <%= @empresa.endereco %>
          </p>
          <p>
            <strong>Municipio:</strong>
            <%= @empresa.municipio %>
          </p>
          <p>
            <strong>Status Empresa:</strong>
            <%= @empresa.status_empresa %>
          </p>
      </div>
    </div>
    <div class="card-footer border-0 d-flex justify-content-between">
      <div>
        <%= link_to edit_empresa_path(@empresa), class: "btn btn-primary" do %>
        <i class="bi bi-pencil-square"></i> Editar
        <% end %>
        <%= link_to "Voltar", empresas_path, class: "btn btn-secondary" %>
      </div>
      <%= button_to "Deletar", @empresa, method: :delete, class: "btn btn-outline-danger border-0" %>
    </div>
  </div>
</div>
