<div class="container">
  <%= render "shared/notice" %>
  <div class="card border-0 shadow shadow-sm">
    <div class="card-header border-0 d-flex justify-content-between">
      <span class="fs-4">Visualizar Saida Estoque</span>
    </div>
    <div class="card-body">
      <div id="<%= dom_id @saida_estoque %>">
          <p>
            <strong>Empresa:</strong>
            <%= @saida_estoque.empresa %>
          </p>
          <p>
            <strong>Produto:</strong>
            <%= @saida_estoque.produto %>
          </p>
          <p>
            <strong>Quantidade:</strong>
            <%= @saida_estoque.quantidade %>
          </p>
          <p>
            <strong>Data Saida:</strong>
            <%= @saida_estoque.data_saida %>
          </p>
          <p>
            <strong>Observacao:</strong>
            <%= @saida_estoque.observacao %>
          </p>
          <p>
            <strong>Created By:</strong>
            <%= @saida_estoque.created_by %>
          </p>
          <p>
            <strong>Created At:</strong>
            <%= @saida_estoque.created_at %>
          </p>
      </div>
    </div>
    <div class="card-footer border-0 d-flex justify-content-between">
      <div>
        <%= link_to edit_saida_estoque_path(@saida_estoque), class: "btn btn-primary" do %>
        <i class="bi bi-pencil-square"></i> Editar
        <% end %>
        <%= link_to "Voltar", saida_estoques_path, class: "btn btn-secondary" %>
      </div>
      <%= button_to "Deletar", @saida_estoque, method: :delete, class: "btn btn-outline-danger border-0" %>
    </div>
  </div>
</div>
