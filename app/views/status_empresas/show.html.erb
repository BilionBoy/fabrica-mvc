<div class="container">
  <%= render "shared/notice" %>
  <div class="card border-0 shadow shadow-sm">
    <div class="card-header border-0 d-flex justify-content-between">
      <span class="fs-4">Visualizar Status Empresa</span>
    </div>
    <div class="card-body">
      <div id="<%= dom_id @status_empresa %>">
          <p>
            <strong>Descricao:</strong>
            <%= @status_empresa.descricao %>
          </p>
      </div>
    </div>
    <div class="card-footer border-0 d-flex justify-content-between">
      <div>
        <%= link_to edit_status_empresa_path(@status_empresa), class: "btn btn-primary" do %>
        <i class="bi bi-pencil-square"></i> Editar
        <% end %>
        <%= link_to "Voltar", status_empresas_path, class: "btn btn-secondary" %>
      </div>
      <%= button_to "Deletar", @status_empresa, method: :delete, class: "btn btn-outline-danger border-0" %>
    </div>
  </div>
</div>
