<div class="container">
  <%= render "shared/notice" %>
  <div class="card border-0 shadow shadow-sm">
    <div class="card-header border-0 d-flex justify-content-between">
      <span class="fs-4">Visualizar Tipo Usuario</span>
    </div>
    <div class="card-body">
      <div id="<%= dom_id @tipo_usuario %>">
          <p>
            <strong>Descricao:</strong>
            <%= @tipo_usuario.descricao %>
          </p>
      </div>
    </div>
    <div class="card-footer border-0 d-flex justify-content-between">
      <div>
        <%= link_to edit_tipo_usuario_path(@tipo_usuario), class: "btn btn-primary" do %>
        <i class="bi bi-pencil-square"></i> Editar
        <% end %>
        <%= link_to "Voltar", tipo_usuarios_path, class: "btn btn-secondary" %>
      </div>
      <%= button_to "Deletar", @tipo_usuario, method: :delete, class: "btn btn-outline-danger border-0" %>
    </div>
  </div>
</div>
