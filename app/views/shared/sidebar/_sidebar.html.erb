<div class="sidebar sidebar-dark sidebar-main sidebar-expand-xl" style="background: #005171;">
  <div class="sidebar-content">

    <!-- Cabeçalho -->
    <div class="sidebar-section">
      <div class="sidebar-section-body d-flex justify-content-center">
        <h5 class="sidebar-resize-hide flex-grow-1 my-auto"><b>Menu</b></h5>
        <div>
          <button
            type="button"
            class="btn btn-flat-white btn-icon btn-sm rounded-pill border-transparent sidebar-mobile-main-toggle d-xl-none"
          >
            <i class="ph-x"></i>
          </button>
        </div>
      </div>
    </div>

    <!-- Barra de pesquisa -->
    <div class="sidebar-section-body">
      <div class="form-control-feedback form-control-feedback-end">
        <input
          type="search"
          id="sidebar-search-input"
          class="form-control"
          placeholder="Pesquisar"
          onkeyup="filterSidebar()"
        />
        <div class="form-control-feedback-icon">
          <i class="ph-magnifying-glass opacity-50"></i>
        </div>
      </div>
    </div>

    <!-- Itens da sidebar -->
    <div class="sidebar-section">
      <ul class="nav nav-sidebar" data-nav-type="accordion" id="sidebar-items">

        <!-- Home -->
        <li class="nav-item">
          <a href="<%= root_path %>" class="nav-link" id="home-link" data-no-close>
            <i class="ph-house"></i>
            <span>Home</span>
          </a>
        </li>

        <!-- Grupo: Cadastros Básicos -->
        <li class="nav-item-header mt-2">
          <div class="text-uppercase fs-sm lh-sm opacity-50 sidebar-resize-hide">Cadastros Básicos</div>
        </li>

        <!-- Países -->
        <li class="nav-item">
          <a href="<%= paises_path %>" class="nav-link" id="paises-link" data-no-close>
            <i class="ph-globe"></i>
            <span>Países</span>
          </a>
        </li>

        <!-- Estados -->
        <li class="nav-item">
          <a href="<%= estados_path %>" class="nav-link" id="estados-link" data-no-close>
            <i class="ph-map-trifold"></i>
            <span>Estados</span>
          </a>
        </li>

        <!-- Municípios -->
        <li class="nav-item">
          <a href="<%= municipios_path %>" class="nav-link" id="municipios-link" data-no-close>
            <i class="ph-buildings"></i>
            <span>Municípios</span>
          </a>
        </li>

        <!-- Distritos -->
        <li class="nav-item">
          <a href="<%= distritos_path %>" class="nav-link" id="distritos-link" data-no-close>
            <i class="ph-map-pin-line"></i>
            <span>Distritos</span>
          </a>
        </li>

        <!-- Bairros -->
        <li class="nav-item">
          <a href="<%= bairros_path %>" class="nav-link" id="bairros-link" data-no-close>
            <i class="ph-map-pin"></i>
            <span>Bairros</span>
          </a>
        </li>

        <!-- Unidades de Medida -->
        <li class="nav-item">
          <a href="<%= unidades_medida_path %>" class="nav-link" id="unidades-link" data-no-close>
            <i class="ph-ruler"></i>
            <span>Unidades de Medida</span>
          </a>
        </li>

        <!-- Empresas -->
        <li class="nav-item">
          <a href="<%= empresas_path %>" class="nav-link" id="empresas-link" data-no-close>
            <i class="ph-buildings"></i>
            <span>Empresas</span>
          </a>
        </li>

        <!-- Status de Empresas -->
        <li class="nav-item">
          <a href="<%= status_empresas_path %>" class="nav-link" id="status-empresas-link" data-no-close>
            <i class="ph-check-circle"></i>
            <span>Status de Empresas</span>
          </a>
        </li>

      </ul>
    </div>
  </div>
</div>

<script>
  function filterSidebar() {
    const input = document.getElementById('sidebar-search-input');
    const filter = input.value.toLowerCase();
    const navItems = document.querySelectorAll('#sidebar-items .nav-item, #sidebar-items .nav-item-header');

    navItems.forEach(item => {
      const text = item.textContent.toLowerCase();
      const isCollapsible = item.querySelector('.nav-group-sub');
      if (text.includes(filter)) {
        item.style.display = '';
        if (isCollapsible) isCollapsible.classList.add('show');
      } else {
        item.style.display = 'none';
      }
    });
  }
</script>
